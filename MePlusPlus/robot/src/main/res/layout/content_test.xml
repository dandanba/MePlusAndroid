<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="蓝牙监测"
            android:textColor="@color/meItemTextColor"
            android:textSize="@dimen/meTitleSize" />

        <TextView
            android:id="@+id/bluetooth_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/button_blue"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/meWhite"
            android:textSize="@dimen/meTitleSize" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="底盘硬件检测"
            android:textColor="@color/meItemTextColor"
            android:textSize="@dimen/meTitleSize" />

        <include layout="@layout/control_layout" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="20dp">


        <TextView
            android:id="@+id/net_test_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/button_blue"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="本地网络测试"
            android:textColor="@color/meWhite"
            android:textSize="@dimen/meTitleSize" />

        <TextView
            android:id="@+id/echo_test_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/button_blue"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/meWhite"
            android:textSize="@dimen/meTitleSize" />

        <TextView
            android:id="@+id/channel_test_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/button_blue"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="视频通话测试"
            android:textColor="@color/meWhite"
            android:textSize="@dimen/meTitleSize" />


    </LinearLayout>

</LinearLayout>
